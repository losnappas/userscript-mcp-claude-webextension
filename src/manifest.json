{
    "manifest_version": 3,
    "name": "UserScripts Claude.ai",
    "description": "User scripting via claude.ai, through an MCP in this extension.",
    "version": "1.0.1",
    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "96": "icon/96.png",
        "128": "icon/128.png"
    },
    "{{chrome}}.permissions": [
        "storage",
        "activeTab",
        "scripting",
        "userScripts"
    ],
    "{{firefox}}.permissions": ["storage", "activeTab", "scripting"],
    "{{firefox}}.optional_permissions": ["userScripts"],
    "host_permissions": ["<all_urls>"],
    "{{chrome}}.background": {
        "service_worker": "src/background.js"
    },
    "{{firefox}}.background": {
        "scripts": ["src/background.js"]
    },
    "action": {
        "default_title": "Open Claude with user script MCP"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "userscripts-claude@losnappas"
        }
    }
}
